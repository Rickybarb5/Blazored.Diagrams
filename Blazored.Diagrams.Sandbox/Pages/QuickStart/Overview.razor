@page "/overview"
<MudContainer>
    <MudCard>
        <MudContainer>
            <MudText Typo="Typo.h4">Install nuget package</MudText>
            <CodeHighlighter Code="dotnet add package Blazored.Diagrams" Language="powershell"></CodeHighlighter>
        </MudContainer>
    </MudCard>
    <MudCard>
        <MudContainer>
            <MudText Typo="Typo.h4">Register services</MudText>
            <MudText Typo="Typo.subtitle1"> The following registers all necessary services for Blazored.Diagrams to work correctly.</MudText>
            <CodeHighlighter Code="@($"builder.Services.{nameof(BlazoredDiagramsExtensions.AddBlazoredDiagrams)}();")" Language="csharp"></CodeHighlighter>
        </MudContainer>
    </MudCard>
    <MudCard>
        <MudContainer>
            <MudText Typo="Typo.h4">Components</MudText>
            <MudText Typo="Typo.subtitle1"> Currently, the following component types are supported:</MudText>
            <MudList>
                <MudListItem>Nodes</MudListItem>
                <MudDivider></MudDivider>
                <MudListItem>Groups</MudListItem>
                <MudDivider></MudDivider>
                <MudListItem>Links</MudListItem>
                <MudDivider></MudDivider>
                <MudListItem>Ports</MudListItem>
                <MudDivider></MudDivider>
            </MudList>

            @* TODO:Showcase all of the different components *@
